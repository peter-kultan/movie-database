<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="movie_database.Views.MovieItemView">
	<Grid>
		<Image Source="{Binding BackGround}" Width="800" Height="300" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
		<Button Command="{Binding Back}" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" Height="50" Width="80" />
	</Grid>
</UserControl>
