<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:movie_database.Views"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="movie_database.Views.MainWindow"
        Title="MainWindow">
	<Grid>
		<Button VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10 10">
			<PathIcon Data="{StaticResource settings_regular}"/>
		</Button>
		<TabControl HorizontalAlignment="Stretch">
			<TabItem Header="Movies">
				<Panel HorizontalAlignment="Stretch">
					<local:MovieGridView Margin="5 5"/>
				</Panel>
			</TabItem>
			<TabItem Header="TV Series"></TabItem>
		</TabControl>
	</Grid>
</Window>
