<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="287" d:DesignHeight="431"
             x:Class="movie_database.Views.AlbumView">
	<StackPanel Spacing="5" Width="287">
		<Border CornerRadius="10" ClipToBounds="True">
			<Panel Background="#3b3b3b">
				<Image Width="200" Stretch="Uniform" Source="{Binding Cover}"/>
				<Panel Height="431" IsVisible="{Binding Cover, Converter={x:Static ObjectConverters.IsNull}}">
					<PathIcon Height="100" Width="100" Data="{StaticResource movies_and_tv_regular}" />
				</Panel>
			</Panel>
		</Border>
	</StackPanel>
</UserControl>
